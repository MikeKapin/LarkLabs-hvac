  "shortcuts": [
    {
      "name": "Quick Practice",
      "short_name": "Quick Practice",
      "description": "Start a quick 25-question practice session",
      "url": "/?exam=quick",
      "icons": [
        {
          "src": "/assets/images/shortcuts/quick-practice.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Full Mock Exam",
      "short_name": "Full Exam",
      "description": "Take a complete TSSA exam simulation",
      "url": "/?exam=full",
      "icons": [
        {
          "src": "/assets/images/shortcuts/full-exam.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Progress Dashboard",
      "short_name": "Progress",
      "description": "View your learning progress and analytics",
      "url": "/dashboard",
      "icons": [
        {
          "src": "/assets/images/shortcuts/dashboard.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "CSA Modules",
      "short_name": "Modules",
      "description": "Study CSA training modules",
      "url": "/modules",
      "icons": [
        {
          "src": "/assets/images/shortcuts/modules.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://tssa-exam-system.larklabs.ca"
    }
  ],
  
  "prefer_related_applications": false,
  
  "protocol_handlers": [
    {
      "protocol": "web+tssa",
      "url": "/?exam=%s"
    }
  ],
  
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"]
      }
    }
  ],
  
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "application/x-www-form-urlencoded",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  
  "launch_handler": {
    "client_mode": "navigate-new"
  },
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "widgets": [
    {
      "name": "study-progress",
      "short_name": "Progress",
      "description": "Quick view of your study progress",
      "tag": "study-progress",
      "template": "study-progress-template",
      "ms_ac_template": "adaptive-card-study-progress",
      "data": "/api/widgets/progress",
      "type": "application/json",
      "screenshots": [
        {
          "src": "/assets/images/widgets/progress-widget.png",
          "sizes": "200x200",
          "label": "Study progress widget"
        }
      ],
      "icons": [
        {
          "src": "/assets/images/widgets/progress-icon.png",
          "sizes": "64x64"
        }
      ]
    }
  ],
  
  "permissions": [
    "storage",
    "notifications"
  ],
  
  "features": [
    "cross-origin-isolated"
  ]
}