{
  "name": "hvac-jack",
  "version": "1.3.0",
  "description": "HVAC Jack - AI-powered HVAC assistant with photo analysis and rating plate recognition",
  "main": "index.js",
  "scripts": {
    "dev": "netlify dev",
    "build": "echo 'No build step required'",
    "test": "echo 'No tests specified'",
    "start": "netlify dev",
    "deploy": "netlify deploy --prod"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "node-fetch": "^3.3.2",
    "tesseract.js": "^5.0.4",
    "canvas": "^2.11.2"
  },
  "devDependencies": {
    "netlify-cli": "^17.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/hvac-jack.git"
  },
  "keywords": [
    "hvac",
    "ai",
    "assistant",
    "photo-analysis",
    "rating-plate",
    "claude",
    "netlify",
    "vision-ai",
    "equipment-analysis",
    "capacitor-specs",
    "warranty-check"
  ],
  "author": "LARK Labs",
  "license": "MIT",
  "netlify": {
    "functions": {
      "directory": "netlify/functions",
      "node_bundler": "esbuild"
    }
  },
  "features": {
    "textChat": "Claude-powered HVAC assistance",
    "photoAnalysis": "Rating plate analysis with OCR + Claude Vision",
    "ocrPreprocessing": "Tesseract.js text extraction for enhanced accuracy",
    "equipmentDatabase": "Comprehensive manufacturer database integration",
    "errorCodeLookup": "Advanced error code database with diagnostics",
    "equipmentIdentification": "Automatic brand/model recognition",
    "warrantyCalculation": "Age-based warranty status",
    "capacitorSpecs": "Exact MFD/voltage requirements",
    "technicalSpecs": "Professional-grade specifications",
    "contentFiltering": "HVAC-focused conversation filtering",
    "usageTracking": "Detailed analytics and monitoring"
  },
  "supportedFormats": {
    "images": ["image/jpeg", "image/png", "image/webp"],
    "maxFileSize": "10MB",
    "analysisTime": "20-35 seconds (with OCR preprocessing)"
  }
}
