{
  "version": 2,
  "builds": [
    {
      "src": "netlify/functions/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/\\.netlify/functions/(.*)",
      "dest": "/netlify/functions/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "ANTHROPIC_API_KEY": "@anthropic_api_key"
  }
}
