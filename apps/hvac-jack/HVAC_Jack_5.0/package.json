{
  "name": "hvac-jack",
  "version": "5.0.0",
  "description": "HVAC Jack 5.0 - AI-powered HVAC assistant with Claude Sonnet 4.5",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "vercel dev",
    "build": "echo 'No build step required'",
    "test": "echo 'No tests specified'",
    "start": "vercel dev",
    "deploy": "vercel --prod"
  },
  "dependencies": {
    "stripe": "^17.7.0",
    "micro": "^10.0.1"
  },
  "devDependencies": {
    "netlify-cli": "^17.0.0"
  },
  "engines": {
    "node": "22.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/hvac-jack.git"
  },
  "keywords": [
    "hvac",
    "ai",
    "assistant",
    "photo-analysis",
    "rating-plate",
    "claude",
    "netlify",
    "vision-ai",
    "equipment-analysis",
    "capacitor-specs",
    "warranty-check"
  ],
  "author": "LARK Labs",
  "license": "MIT",
  "netlify": {
    "functions": {
      "directory": "netlify/functions",
      "node_bundler": "esbuild"
    }
  },
  "features": {
    "textChat": "Claude-powered HVAC assistance",
    "photoAnalysis": "Rating plate analysis with OCR + Claude Vision",
    "ocrPreprocessing": "Tesseract.js text extraction for enhanced accuracy",
    "equipmentDatabase": "Comprehensive manufacturer database integration",
    "errorCodeLookup": "Advanced error code database with diagnostics",
    "multiPhotoAnalysis": "Composite analysis from multiple equipment photos",
    "predictiveMaintenance": "AI-powered failure prediction and maintenance optimization",
    "complianceChecker": "CSA B149.1 installation compliance verification",
    "manufacturerIntegration": "Smart data retrieval from manufacturer sources",
    "equipmentIdentification": "Automatic brand/model recognition",
    "warrantyCalculation": "Age-based warranty status",
    "capacitorSpecs": "Exact MFD/voltage requirements",
    "technicalSpecs": "Professional-grade specifications",
    "contentFiltering": "HVAC-focused conversation filtering",
    "usageTracking": "Detailed analytics and monitoring"
  },
  "supportedFormats": {
    "images": ["image/jpeg", "image/png", "image/webp"],
    "maxFileSize": "10MB",
    "analysisTime": "20-35 seconds (with OCR preprocessing)"
  }
}
